<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="initial-scale=1.0, user-scalable=no" />
    <style type="text/css">
        html {
            height: 100%;
        }

        body {
            height: 100%;
            margin: 0;
            padding: 0;
        }

        #map-canvas {
            height: 100%;
        }
    </style>
    <script type="text/javascript"
        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDG1dO1Chhf56iJQG6YeLO50sVDE_w3nk4&sensor=false">
    </script>
    <script type="text/javascript">
        // Enable the visual refresh (more modern-looking Google Maps)
        google.maps.visualRefresh = true;

        var map;

        var toilets = [
            {
                name: 'Poulton Park',
                lat: -33.97942512,
                lng: 151.0982179,
            },
            {
                name: 'Helipad - Dr Reid Park',
                lat: -28.62834519,
                lng: 153.0017754
            },
            {
                name: 'Federal Park',
                lat: -32.89961804,
                lng: 151.6701746
            }
        ];

        function initialize() {
            var mapOptions = {
                center: new google.maps.LatLng(-32.917, 151.750),
                zoom: 8,
                mapTypeId: google.maps.MapTypeId.ROADMAP
            };

            map = new google.maps.Map(document.getElementById("map-canvas"),
                mapOptions);

            for (var i = 0; i < toilets.length; i++) {
                placeMarker(toilets[i].name, toilets[i].lat, toilets[i].lng);
            }
        }

        function placeMarker(title, lat, lng) {
            var marker = new google.maps.Marker({
                title: title,
                position: new google.maps.LatLng(lat, lng),
                map: map
            });
        }

        google.maps.event.addDomListener(window, 'load', initialize);
    </script>
</head>
<body>
    <div id="map-canvas" />
</body>
</html>
