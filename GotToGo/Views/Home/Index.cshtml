<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="initial-scale=1.0, user-scalable=no" />
    <style type="text/css">
        html {
            height: 100%;
        }

        body {
            height: 100%;
            margin: 0;
            padding: 0;
        }

        h1 {
            font-size: 1.3em;
            font-family: Verdana, Arial, sans-serif;
            padding: 0;
            margin: 0 0 0 10px;
        }

        #header {
            color: #666;
            border-bottom: solid 3px #666;
            background-color: #e2d77e;
            padding: 0;
            margin: 0;
            height: 47px;
            line-height: 47px;
        }

        #map-canvas {
            height: auto;
            width: 100%;
            position: absolute;
            top: 50px;
            bottom: 0;
        }
    </style>
    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDG1dO1Chhf56iJQG6YeLO50sVDE_w3nk4&sensor=false"></script>
    <script type="text/javascript" src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.9.1.min.js"></script>
    <script type="text/javascript">
        // Enable the visual refresh (more modern-looking Google Maps)
        google.maps.visualRefresh = true;

        var map;

        function initialize() {
            var mapOptions = {
                center: new google.maps.LatLng(-32.917, 151.750),
                zoom: 8,
                mapTypeId: google.maps.MapTypeId.ROADMAP
            };

            map = new google.maps.Map(document.getElementById("map-canvas"),
                mapOptions);

            $.ajax({
                accepts: 'application/json',
                url: '/api/Toilet'
            }).done(function (toilets) {
                for (var i = 0; i < toilets.length; i++) {
                    placeMarker(toilets[i].Name, toilets[i].Lat, toilets[i].Lng);
                }
            });
        }

        function placeMarker(title, lat, lng) {
            var marker = new google.maps.Marker({
                title: title,
                position: new google.maps.LatLng(lat, lng),
                map: map
            });
        }

        google.maps.event.addDomListener(window, 'load', initialize);
    </script>
</head>
<body>
    <div id="header">
        <h1>Got to go?</h1>
    </div>
    <div id="map-canvas" />
</body>
</html>
